{
  "name": "markup",
  "version": "1.0.0",
  "description": "A electron app to view and edit markdown texts.",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "react:start": "react-scripts start",
    "electron:start": "wait-on tcp:3000 && electron --enable-transparent-visual --disable-gpu .",
    "start": "concurrently -k \"BROWSER=none npm run react:start\" \"npm run electron:start\""
  },
  "dependencies": {
    "@codemirror/legacy-modes": "^0.20.0",
    "@codemirror/stream-parser": "^0.19.9",
    "@uiw/react-codemirror": "^4.7.0",
    "concurrently": "^7.1.0",
    "electron": "^18.1.0",
    "process": "^0.11.10",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-is": "^18.0.0",
    "react-markdown": "^8.0.3",
    "react-scripts": "^5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-raw": "^6.1.1",
    "remark-breaks": "^3.0.2",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "styled-components": "^5.3.5",
    "wait-on": "^6.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
