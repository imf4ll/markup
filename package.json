{
  "name": "markup",
  "version": "1.0.1",
  "description": "A electron app to view and edit markdown texts.",
  "main": "./dist/electron/main.js",
  "license": "MIT",
  "scripts": {
    "react:start": "PORT=14968 react-scripts start",
    "electron:start": "wait-on tcp:14968 && electron --enable-transparent-visual --disable-gpu .",
    "start": "npm run build && concurrently -k \"BROWSER=none npm run react:start\" \"npm run electron:start\"",
    "build": "tsc --build --verbose",
    "test": "npm run build && electron ."
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-is": "^18.0.0",
    "react-markdown": "^8.0.3",
    "react-scripts": "^5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-raw": "^6.1.1",
    "remark-breaks": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "styled-components": "^5.3.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-dom": "^18.0.0",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/styled-components": "^5.1.25",
    "concurrently": "^7.1.0",
    "electron": "^18.1.0",
    "typescript": "^4.6.3",
    "wait-on": "^6.0.1"
  }
}
